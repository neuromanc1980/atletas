<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xavib.vortix.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newGame"
        android:layout_marginTop="19dp"
        android:id="@+id/continueBtn"
        android:layout_alignLeft="@+id/newGame"
        android:layout_alignStart="@+id/newGame"
        android:layout_alignRight="@+id/optionsBtn"
        android:layout_alignEnd="@+id/optionsBtn"
        android:background="@drawable/continuee" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/scoreBtn"
        android:background="@drawable/score"
        android:layout_below="@+id/continueBtn"
        android:layout_alignRight="@+id/continueBtn"
        android:layout_alignEnd="@+id/continueBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreBtn"
        android:layout_marginTop="15dp"
        android:id="@+id/workshopBtn"
        android:layout_alignRight="@+id/scoreBtn"
        android:layout_alignEnd="@+id/scoreBtn"
        android:layout_alignLeft="@+id/scoreBtn"
        android:layout_alignStart="@+id/scoreBtn"
        android:background="@drawable/workshop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionsBtn"
        android:background="@drawable/options"
        android:layout_below="@+id/workshopBtn"
        android:layout_alignRight="@+id/newGame"
        android:layout_alignEnd="@+id/newGame"
        android:layout_marginTop="17dp" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.example.xavib.vortix.GameView"
        android:id="@+id/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newGame"
        android:background="@drawable/newgame"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="230dp"
        android:layout_marginStart="230dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quitBtn"
        android:background="@drawable/quit"
        android:layout_alignTop="@+id/optionsBtn"
        android:layout_alignLeft="@+id/workshopBtn"
        android:layout_alignStart="@+id/workshopBtn"
        android:layout_marginTop="67dp" />

</RelativeLayout>
